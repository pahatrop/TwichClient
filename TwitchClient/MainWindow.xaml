<Window x:Class="TwitchClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">

    <Grid Background="#098086">
        <ListBox HorizontalAlignment="Center" Margin="10,10,0,10" ItemsSource="{Binding AllGames, UpdateSourceTrigger=PropertyChanged}" Width="485" Background="WhiteSmoke" BorderBrush="WhiteSmoke">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="5" Padding="20" BorderThickness="1" BorderBrush="SteelBlue" CornerRadius="4" Width="450">
                        <Grid Margin="3">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" FontWeight="Bold" Text="{Binding Path=Name}" Foreground="#073784"/>
                            <TextBlock Grid.Row="1" FontWeight="Normal" Text="{Binding Path=Channels}"/>
                            <TextBlock Grid.Row="2" FontWeight="Normal" Text="{Binding Path=Viewers}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
